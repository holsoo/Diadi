<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <Button
                    android:id="@+id/mod_toPrev"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/mod_writeDiary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:textSize="25dp"
                    android:text="일기 수정하기"/>
            </LinearLayout>
            <TextView
                android:id="@+id/mod_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사진"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/mod_addPictureButton"
                android:layout_height="1dp"
                android:layout_width="1dp"/>

            <ImageView
                android:id="@+id/mod_addPicture"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_launcher_background"
                android:onClick="onClick"
                tools:ignore="SpeakableTextPresentCheck"/>
            <TextView
                android:id="@+id/mod_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제목"
                android:layout_marginTop="20dp"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/mod_addTitle"
                android:background="@drawable/border"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true" />
            <TextView
                android:id="@+id/mod_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="날짜"
                android:layout_marginTop="20dp"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/mod_addDate"
                android:background="@drawable/border"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/mod_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="장소"
                android:layout_marginTop="20dp"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/mod_addPlace"
                android:background="@drawable/border"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mod_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날씨"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/mod_sunny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:minHeight="48dp"
                    android:minWidth="0dp"
                    android:backgroundTint="@color/ddddff"
                    android:textColor="@color/purple"
                    android:text="맑음"/>
                <Button
                    android:id="@+id/mod_cloudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:minHeight="48dp"
                    android:minWidth="0dp"
                    android:backgroundTint="@color/ddddff"
                    android:textColor="@color/purple"
                    android:text="흐림"/>
                <Button
                    android:id="@+id/mod_rainy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:minHeight="48dp"
                    android:minWidth="0dp"
                    android:backgroundTint="@color/ddddff"
                    android:textColor="@color/purple"
                    android:text="비"/>
                <Button
                    android:id="@+id/mod_snowy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:minHeight="48dp"
                    android:minWidth="0dp"
                    android:backgroundTint="@color/ddddff"
                    android:textColor="@color/purple"
                    android:text="눈"/>
            </LinearLayout>
            <TextView
                android:id="@+id/mod_diaryContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일기내용"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/mod_addDiaryContent"
                android:background="@drawable/border"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true"/>

            <Button
                android:id="@+id/mod_addDiaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/ddddff"
                android:textColor="@color/purple"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:text="저장하기"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
